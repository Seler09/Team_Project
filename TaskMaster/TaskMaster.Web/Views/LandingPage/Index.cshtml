@using TaskMaster.Web.Resources
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TaskMaster</title>   
    <link rel="stylesheet" href="../../Content/bootstrap.min.css"/>
    <link rel="stylesheet" href="../../Content/style.css" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Quicksand">   
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>    

</head>
<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">
                <img src="../../images/TMLogo3.png"/>
            </a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li id="logIn"><a href="#">@LandingPageText.signIn</a></li>
                <li id="register"><a href="#">@LandingPageText.signUp</a></li>
            </ul>
        </div>
    </div>
</nav>
<div class="row loggingSection">
    <div class="col-md-6 col-xs-12">
        <div class="col-md-6 col-md-offset-4">
            <h2>@LandingPageText.leftMainText</h2>
            <p>@LandingPageText.leftAdditionalText</p>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <button class="googleButton btn btn-success "><img src="../../images/google.png"/></button>
                        <button class="facebookButton btn btn-info"><img src="../../images/facebook.png"/></button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <input type="text" class="form-control" id="inputEmail" placeholder="@LandingPageText.email">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <input type="password" class="form-control" id="inputPassword" placeholder="@LandingPageText.password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <button id="signInButton" type="submit" class="btn btn-primary">@LandingPageText.signInButton</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<div class="howItWorksSection">
    <div class="row ">
        <div class="col-md-6 col-md-offset-3">
            <h3>@LandingPageText.HowItWorksTitle</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <p>@LandingPageText.HowItWorks1</p>
        </div>
        <div class="col-md-4">
            <p>@LandingPageText.HowItWorks2</p>
        </div>
        <div class="col-md-4">
            <p>@LandingPageText.HowItWorks3</p>
        </div>
    </div>
</div>
    
<script>
    $(document).ready(function() {
        $("#register").click(function() {
            $("#signInButton").replaceWith(
                "<button id=\"signInButton\" type=\"submit\" class=\"btn btn-primary\">@LandingPageText.signUpButton</button>");
        });
    });

    $(document).ready(function() {
        $("#logIn").click(function() {
            $("#signInButton").replaceWith(
                "<button id=\"signInButton\" type=\"submit\" class=\"btn btn-primary\">@LandingPageText.signInButton</button>");
        });
    });
</script>

<script>
    $(".googleButton").click(function() {
        $(this).css('border', "solid 2px red");
    });
</script>

</body>
</html>
