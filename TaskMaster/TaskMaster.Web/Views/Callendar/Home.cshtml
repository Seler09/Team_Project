                    @if (@ViewBag.mod == null)
                    {

                    }
                    else
                    {
                        foreach (var p in @ViewBag.mod)
                        {
                            <tr>
                                <td><img src="../../images/eat.png" /></td>
                                <td>@p[0]</td>
                                <td>@p[1]</td>
                                <td>@p[2]</td>
