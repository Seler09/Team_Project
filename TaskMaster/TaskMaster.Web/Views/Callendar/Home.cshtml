                                <td>@p[4]</td>
                            </tr>
                         }
                    }
                     

            </table>
            
        </div>
    </div>
</div>

<script>
    
    var changeMonth = 0;
    var changeYear = 0;
    var month = 0;
    var year = 0;
    function createCallendar() {
        document.getElementById("callendar").innerHTML = '';
        var date = new Date();
        var months = [
            'Styczeń', 'Luty', 'Marzec', 'Kwiecien', 'Maj', 'Czerwiec', 'Lipiec', 'Sierpien', 'Wrzesien', 'Pazdziernik',
            'Listopad', 'Grudzien'
        ];
        var monthsEng = [
            'January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October',
            'November', 'December'
        ];

        month = date.getMonth() + changeMonth;
        year = date.getFullYear() + changeYear;
        var firstDate = monthsEng[month] + " " + 1 + ", " + year;
        var tmp = new Date(firstDate);

        var days = ['Poniedziałek', 'Wtorek', 'Środa', 'Czwartek', 'Piątek', 'Sobota', 'Niedziela'];
        var dayNumber = tmp.getDay();
        if (dayNumber != 0)
            dayNumber--;
        else
            dayNumber = 6;

        var days2 = new Date(year, month + 1, 0).getDate(); //total number of days in the current month

        var callendar = getCallendar(dayNumber, days2, days);

        document.getElementById("month").innerHTML = months[month] +" "+ year;
        document.getElementById("callendar").appendChild(callendar);


    }

    createCallendar();

    function sendMonth() {
        var dataToSend = {
            month: month + 1,
            year: year
        };
        $.ajax({
            url: "/Callendar/Home", //GetMonthAndYear
            type: "POST",
            dataType: "json",
            data: dataToSend
        });
        
    }


    function addMonth() {
        changeMonth++;
        if (month == 11) {
            month = 0;
            var d = new Date();
            var currentMonth = d.getMonth();
            changeMonth = 0;
            changeMonth -= currentMonth;
            changeYear++;
        }
        createCallendar();
        sendMonth();
        
    }
    function subtractMonth() {
        changeMonth--;
        if (month == 0) {
            month = 11;
            var d = new Date();
            var currentMonth = d.getMonth();
            changeMonth = 11;
            changeMonth -= currentMonth;
            changeYear--;
        }
        createCallendar();
    }
    function getCallendar(dayNumber, days2, days) {
        var table = document.createElement('table');
        table.className = "callendarTable";
        var tr = document.createElement('tr');


        //days row
        for (var c = 0; c < 7; c++) {
            var th = document.createElement('th');
            th.innerHTML = days[c];
            tr.appendChild(th);
        }
        table.appendChild(tr);

        //second row
        tr = document.createElement('tr');
        var c;
        for (c = 0; c < 7; c++) {
            if (c == dayNumber) {
                break;
            }
            var td = document.createElement('td');
            var cell = document.createElement('div');
            cell.className = "cell";
            cell.innerHTML = "";
            td.appendChild(cell);
            tr.appendChild(td);
        }

        var count = 1;
        for (; c < 7; c++) {
            var td = document.createElement('td');
            var cell = document.createElement('div');
            cell.className = "cell";
            cell.innerHTML = count;
            cell.onclick = showTable;

            td.appendChild(cell);
            count++;
            tr.appendChild(td);
        }

        table.appendChild(tr);


        //rest of rows
        for (var r = 3; r <= 7; r++) {
            tr = document.createElement('tr');
            for (var c = 0; c < 7; c++) {
                if (count > days2) {
                    table.appendChild(tr);
                    return table;
                }
                var td = document.createElement('td');
                var cell = document.createElement('div');
                cell.className = "cell";
                cell.innerHTML = count;
                td.appendChild(cell);
                count++;
                tr.appendChild(td);
            }
            table.appendChild(tr);
        }
    }



    function createTh(text) {
        var th = document.createElement('th');
        th.innerHTML = text;
        return th;
    }

