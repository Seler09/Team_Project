        //get all dates
        for (var i = 0; i < array.length; i++) {
            for(var j = 0; j < 5; j++) {
                date2[j] = array[i][j];
            }
            date.push(date2);
        }

        //get list of cells
        var checkDay = document.getElementsByClassName('cell');

        for (var i = 0; i < checkDay.length; i++) {
            //var cellDate = new Date(date[i][1]);//new Date(date[j][1].replace(".", "/"));
            var cellDate = 1;       //narazie jedynka, ponniej trzeba tu jakos podstawić date...

            if (checkDay[i].innerHTML == cellDate) {
                var k = document.createElement('div');
                k.className = "activityCircle";
                var image = document.createElement('img');
                image.setAttribute("src", "../../images/eat.png");
