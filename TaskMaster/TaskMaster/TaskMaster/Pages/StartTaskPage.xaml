<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskMaster.StartTaskPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 40, 20, 20"
                    Android="20, 20, 20, 20"
                    WinPhone="20, 20, 20, 20" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center"
                     Spacing="15">
            <Label Text="Podaj nazwę aktywności"/>
            <Entry x:Name="StartTaskActivityName"/>
            <Button x:Name="PlanTaskButton" Text="Zaplanuj aktywność"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>