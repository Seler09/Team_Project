<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskMaster.HistoryPage" BackgroundColor="{x:StaticResource BackgroundColor}">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 40, 20, 20"
                    Android="20, 20, 20, 20"
                    WinPhone="20, 20, 20, 20" />
    </ContentPage.Padding>
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="MainPageItem" Order="Primary" Priority="0" Clicked="MainPageItem_OnClicked" Text="Test"/>
        <ToolbarItem x:Name="CalendarPageItem" Order="Primary" Priority="1" Clicked="CalendarPageItem_OnClicked" Text="Testowy"/>
        <ToolbarItem x:Name="HistoryPageItem" Order="Primary" Priority="2" Text="Teścik"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" Spacing="15">
            <Label Text="Miejsce na statystyki. Podział również na kalendarz oraz dodatkowe elementy"  BackgroundColor="{x:StaticResource BackgroundButtonColor}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>