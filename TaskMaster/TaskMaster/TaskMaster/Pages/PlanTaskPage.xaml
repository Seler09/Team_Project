<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskMaster.PlanTaskPage" BackgroundColor="{x:StaticResource BackgroundColor}">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 40, 20, 20"
                    Android="20, 20, 20, 20"
                    WinPhone="20, 20, 20, 20" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout HeightRequest="50">
                
            </StackLayout>
            <StackLayout Orientation="Horizontal" Spacing="2" VerticalOptions="Center">
                <Label Text="{x:StaticResource NameText}" WidthRequest="70" HorizontalTextAlignment="End" VerticalOptions="Center" TextColor="{x:StaticResource TextColor}"/>
                <Entry x:Name="ActivityName" HorizontalOptions="FillAndExpand" TextColor="{x:StaticResource TextColor}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <Label Text="{x:StaticResource DateStartText}" WidthRequest="70" HorizontalTextAlignment="End" VerticalOptions="Center" TextColor="{x:StaticResource TextColor}"/>
                <DatePicker x:Name="PlanTaskStartDate" Format="dd/MM/yyyy" HorizontalOptions="Fill" TextColor="{x:StaticResource TextColor}"/>
                <TimePicker x:Name="PlanTaskStartTime" Format="HH:mm" HorizontalOptions="Fill" TextColor="{x:StaticResource TextColor}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <Label Text="{x:StaticResource DateStopText}" WidthRequest="70" HorizontalTextAlignment="End" VerticalOptions="Center" TextColor="{x:StaticResource TextColor}"/>
                <DatePicker x:Name="PlanTaskStopDate" Format="dd/MM/yyyy" HorizontalOptions="Fill" TextColor="{x:StaticResource TextColor}"/>
                <TimePicker x:Name="PlanTaskStopTime" Format="HH:mm" HorizontalOptions="Fill" TextColor="{x:StaticResource TextColor}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Spacing="2">
                <Label Text="{x:StaticResource DescriptionText}" WidthRequest="70" HorizontalTextAlignment="End" VerticalOptions="Center" TextColor="{x:StaticResource TextColor}"/>
                <Entry x:Name="ActivityDescription" HorizontalOptions="FillAndExpand" TextColor="{x:StaticResource TextColor}"/>
            </StackLayout>
            <Button Text="{x:StaticResource StartPlanText}" x:Name="PlanTaskStartButton" Clicked="PlanTaskStartButton_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>